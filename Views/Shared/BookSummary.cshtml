@{
    
}

@model Book

<!-- each book summary will be found in this page -->
<div class="card m-3 border-secondary">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <h5 class="card-subtitle text-muted">@Model.AuthorFirst @Model.AuthorLast</h5><br />
        <div class="card-text text-sm-left">
            <div class="row no-gutters">
                <p class="col-3">
                    <span class="text-muted">Publisher:</span>
                    <br />@Model.Publisher
                </p>
                <p class="col-3">
                    <span class="text-muted">ISBN:</span>
                    <br />@Model.ISBN
                </p>
                <p class="col-3">
                    <span class="text-muted">Classification:</span>
                    <br />@Model.Classification
                </p>
            </div>
            <div class="row no-gutters">
                <p class="col-3">
                    <span class="text-muted">Category:</span>
                    <br />@Model.Category
                </p>
                <p class="col-3">
                    <span class="text-muted">Price: </span>
                    <br />$@Model.Price
                </p>
                <p class="col-3">
                    <span class="text-muted">Pages: </span>
                    <br />@Model.NumPages pages
                </p>
            </div>
        </div>
        <form id="@Model.BookId" asp-page="/Buy" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                @Model.Title
                <button type="submit" class="btn-success btn-sm pull-right" style="float: right;">
                    Add to Cart
                </button>
            </span>
        </form>
    </div>
</div>